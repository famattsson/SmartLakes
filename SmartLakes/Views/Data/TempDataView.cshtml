
@helper GenerateDropdownContents()
{
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Välj Sjö
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @{List<string> företag = new List<string>() { "Vättern", "Alla Sjöar" };
                foreach (var elem in företag)
                {
                    <li> <a href="/Data/ChooseLake/@elem"> @elem </a>  </li>
                }
            }
        </ul>
    </div>
}

<div class="row container">
    <div class="col-sm-2">
        @GenerateDropdownContents()
    </div>
    <div class="col-sm-10">
        <div class="row">
            <div class='col-sm-10'>
                <form method="get" action="/TempData/GetData">
                    <input type='date' class="form-control" style="display:inline" />
                    <input type='date' class="form-control" style="display:inline" />
                    <input type="submit" value="FAAAACK UUUUUU" />
                </form>

            </div>
        </div>

        <div class="col-sm-10" style="padding:20px" color="#fff">
            <div id="chart_div"></div>
            <br />
        </div>
    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    var data = null;
    var chart = null;
    var options = null;

    google.charts.load('current', { packages: ['corechart', 'line'] });
    google.charts.setOnLoadCallback(drawBasic);

    function drawBasic() {

        data = new google.visualization.DataTable();
        data.addColumn('number', 'X');
        data.addColumn('number', 'Sjö1');
        data.addColumn('number', 'Sjö2');
        data.addColumn('number', 'Sjö3');
        data.addColumn('number', 'Sjö4');
        data.addColumn('number', 'Sjö5');

        data.addRows([
            [0, 0, 0, 0, 0, 0], [10, 40, 20, 10, 15, 30], [20, 30, 13, 33, 50, 20], [60, 10, 23, 51, 20, 40],
        ]);

        options = {
            hAxis: {
                title: 'Time'
            },
            vAxis: {
                title: 'Temperatur (celsius)'
            },
            curveType: 'function',
            animation: {
                duration: 750,
                easing: 'out'
            },
        };

        chart = new google.visualization.LineChart(document.getElementById('chart_div'));

        chart.draw(data, options);
    }

    $("[type='number']").keypress(function (evt) {
        evt.preventDefault();
    });
    $(window).resize(function () {
        if (chart != null) {
            chart.draw(data, options);
        }
    })
</script>